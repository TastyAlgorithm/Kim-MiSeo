import java.util.*;

public class baekjoon_9372 {
	
	public static int T,N,M;
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		
		T=sc.nextInt();
		while(T-->0) {
			N=sc.nextInt();
			M=sc.nextInt();
			
			for(int i=0;i<M;i++) {
				int a=sc.nextInt()-1;
				int b=sc.nextInt()-1;
			}
			
			System.out.println(N-1);
		}

	}

}
